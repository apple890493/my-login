<div class="container" id="container">
  <div class="form-container log-in-container">
    <form action="/">
      <h1>Login</h1>
      <div class="icon-container my-3">
        <a href="#"><i class="fab fa-facebook-square fa-3x" style="color: #3c1361"></i></a>
        <a href="#"><i class="fab fa-twitter-square fa-3x" style="color: #3c1361"></i></a>
      </div>
      <span>or use your account</span>
      <div class="form-group">
        <input type="text" placeholder="Email" name="email" value="{{userInfo.email}}" required>
      </div>
      <div class="form-group">
        <input type="text" placeholder="Password" name="password" value="{{userInfo.password}}" required>
      </div>
      <a href="#">Forgot your password?</a>
      <button style="background-color: #eddbf4" type="submit">Log Out</button>
    </form>

  </div>
  <div class="overlay-container">
    <div class="overlay">
      <div class="overlay-panel overlay-right">
        <h1>{{ result }}</h1>
        <p>Good day!</p>
      </div>
    </div>
  </div>
</div>